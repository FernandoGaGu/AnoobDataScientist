<% provide(:title, 'Contact') %>
<!DOCTYPE html>
<html>
  <body>
    <h1>Please, fill in the contact form</h1>
    <div class="row">
		<div class="span6 offset3">
			<%= form_for @contact do |f| %>+
				<%= render 'shared/error_messages' %>
				<%= f.label :name %>
				<%= f.text_field :name %>
				<%= f.label :email %>
				<%= f.text_field :email %>
				<%= f.label :message %>
				<%= f.text_field :message %>				
				<%= f.submit "Contact", class: "btn btn-large btn-primary" %>
			<% end %>
		</div>
	</div>
  </body>
</html>


